<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.starters.medion.MainActivity"
    tools:showIn="@layout/activity_main"
    android:background="#0e6db1"
    android:foregroundTint="#deafaf">

    <ImageView
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:id="@+id/ConnectStage_Logo"
        android:src="@drawable/medion_logo"

        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true" />

    <EditText
        android:layout_width="400dp"
        android:layout_height="wrap_content"
        android:inputType="textPersonName|text"
        android:text="Username"
        android:ems="10"
        android:id="@+id/ConnectStage_Username"
        android:foreground="#ffffff"
        android:layout_below="@+id/ConnectStage_Logo"
        android:layout_centerHorizontal="true"
        android:textColor="#ffffff" />

    <EditText
        android:layout_width="400dp"
        android:layout_height="wrap_content"
        android:inputType="textPersonName"
        android:text="Password"
        android:ems="10"
        android:id="@+id/ConnectStage_Password"
        android:foreground="#ffffff"
        android:layout_marginTop="35dp"
        android:layout_below="@+id/ConnectStage_Username"
        android:layout_alignLeft="@+id/ConnectStage_Username"
        android:layout_alignStart="@+id/ConnectStage_Username"
        android:textColor="#ffffff"
        android:password="true" />

    <CheckBox
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Remember Me"
        android:id="@+id/ConnectStage_Rememberme"
        android:checked="true"
        android:fontFamily="Verdana"
        android:textColor="#ffffff"
        android:layout_below="@+id/ConnectStage_Password"
        android:layout_centerHorizontal="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="New User?"
        android:id="@+id/ConnectStage_newuser"
        android:textColor="#ffffff"
        android:layout_below="@+id/Connectstage_login"
        android:layout_alignLeft="@+id/ConnectStage_Logo"
        android:layout_alignStart="@+id/ConnectStage_Logo"
        android:layout_marginTop="29dp" />

    <Button
        style="?android:attr/buttonStyleSmall"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Sign Up"
        android:id="@+id/ConnectStage_SignUp"
        android:background="#0e6db1"
        android:textStyle="bold"
        android:textColor="#ffffff"
        android:gravity="bottom"
        android:textSize="18dp"
        android:textAllCaps="false"
        android:layout_above="@+id/Connectstage_ForgotPassword"
        android:layout_alignRight="@+id/ConnectStage_Logo"
        android:layout_alignEnd="@+id/ConnectStage_Logo"
        android:layout_alignTop="@+id/ConnectStage_newuser" />

    <Button
        style="?android:attr/buttonStyleSmall"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Forgot Password"
        android:id="@+id/Connectstage_ForgotPassword"
        android:background="#0e6db1"
        android:textColor="#ffffff"
        android:textSize="18dp"
        android:textAllCaps="false"
        android:layout_below="@+id/ConnectStage_newuser"
        android:layout_centerHorizontal="true" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="25dp"
        android:text="Login"
        android:id="@+id/Connectstage_login"
        android:textStyle="bold"
        android:textColor="#000000"
        android:background="#ffffff"
        android:layout_below="@+id/ConnectStage_Rememberme"
        android:layout_centerHorizontal="true" />
</RelativeLayout>